<!-- Dependencies : Config.gdml_entity-->


<box lunit="mm" name="worldS" x="worldX" y="worldY" z="worldZ" />

<!-- Tracker -->
<box lunit="mm" name="TrackerS" x="TrackerX" y="TrackerY" z="TrackerZ" />

<!-- Trigger -->
<box lunit="mm" name="TriggerS" x="TriggerX" y="TriggerY" z="TriggerZ" />

<!-- Detector -->
<box lunit="mm" name="detectorS" x="detectorX" y="detectorY" z="detectorZ" />


 <!-- PMT -->
 <tube name="moduleS" rmin="0" rmax="pmtR" z="pmtZ+windowZ+SOZ" lunit= "mm" startphi="0" deltaphi="360" aunit= "deg" />
<tube name="pmtS" rmin="0" rmax="pmtR" z="pmtZ" lunit= "mm" startphi="0" deltaphi="360" aunit= "deg" />
<tube name="windowS" rmin="0" rmax="pmtR" z="windowZ" lunit= "mm" startphi="0" deltaphi="360" aunit= "deg" />

